<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="Calculator.Styles">
    
    <Style TargetType="Button" x:Key="Button">
        <EventSetter Event="MouseEnter" Handler="Button_OnHover"/>
        <EventSetter Event="MouseLeave" Handler="Button_OnLeave"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Width" Value="72"/>
        <Setter Property="Height" Value="66.66"/>
        <Setter Property="Margin" Value="1.5, 1.5, 1.5, 1.5"/>
    </Style>
    
    <Style TargetType="TextBox" x:Key="TextBoxStyle">
        <Setter Property="Width" Value="295"/>
        <Setter Property="Height" Value="50"></Setter>
    </Style>
    
</ResourceDictionary>